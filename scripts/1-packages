#!/usr/bin/env sh

# Install packages
sudo pacman --needed --noconfirm -S\
  base-devel\
  exa\
  fd\
  git\
  imagemagick\
  jq\
  kitty\
  neovim\
  picom\
  redshift\
  ripgrep\
  rofi\
  xclip\
  xdotool\
  zsh

yay --needed --noconfirm -S\
  rofi-greenclip\
  google-chrome\
  zsa-wally

# Install oh-my-zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"
