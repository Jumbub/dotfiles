# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.js,*.jsx,*.ts,*.tsx,*.hs,*.json,*.yml]
indent_size = 2

[*.py,*.lua]
indent_size = 4

[Makefile]
indent_style = tab

[coc-settings.json]
trim_trailing_whitespace = false
